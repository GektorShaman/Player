<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".presentation.MainActivity">

    main_menu.xml
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linear"
            >
            <TextView
                android:id="@+id/textViewMain"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Music" />
        </LinearLayout>



<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/songRecyclerView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="40dp"
    app:layout_constraintBottom_toTopOf="@id/playsong"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/playsong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/songRecyclerView"
        android:visibility="invisible">
    <ImageView
        android:id="@+id/playimageViewSong"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        />

        <LinearLayout
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playsongName"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/playsongAuthor"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingStart="0dp"
                android:paddingEnd="50dp"
                android:text="author"
                android:textSize="15sp" />
        </LinearLayout>a

        <ImageButton
            android:id="@+id/playbuttonprevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/playbuttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <ImageButton
            android:id="@+id/playbuttonnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_media_next" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>